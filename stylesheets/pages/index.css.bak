@import '../modules/index.scss';
@import '../common.scss';
@import '../partials/left-bar.scss';
@import '../partials/header.scss';
@import '../partials/select-bar.scss';

button {
    outline: none !important;
    border: 0 !important;
}

#timeTilSeason {
    font-size: 1.2em;
    text-align: center;
    margin: 0 240px -9px 214px;
}

#liveStreamStatus {
    font-size: 1em;
    text-align: center;
    margin: 0 261px 0 234px;
}

#liveStreamStatus em {
    color: red;
    font-style: normal;
}

.video-js {
    @extend .noselect;
    display: none;
    text-align: center;
    width: 100%;
    background: black;
    height: 48em;
    margin: 0 0 0 0;
}

.chat {
    @extend .noselect;
    margin: 0em 2px 0 1em;
    height: 30em;
    width: 13em;
    display: inline-block;
}

.bigStreamContainer {
    margin: -0.3em 0 0 0;
    min-width: 81em;
    overflow: hidden;
    display: inline-block;
}

.streamContainer {
    @extend .noselect;
    margin: 0 0 0 2em;
    width: 50em;
    display: inline-block;
    text-align: center;
    vertical-align: top;
    position: relative;
}

.chat-theater {
    @extend .noselect;
    height: 100%;
    width: 275px;
    position: fixed;
    right: 0;
    top: 0;
    bottom: 0;
    display: inline-block;
}

.bigStreamContainer-theater {
    width: auto;
    overflow: hidden;
    display: inline-block;
}

.streamContainer-theater {
    top: 0;
    right: 275px;
    bottom: 0;
    left: 0;
    width: auto;
    display: inline-block;
    text-align: center;
    vertical-align: top;
    position: fixed;   
}

.streamPlayer-theater {
    display: none;
    text-align: center;
    width: 100%;
    height: 100% !important;
    background: black;
}

#streamPlayer::-webkit-media-controls {
    display:none !important;
}

#video-controls {
    outline: none;
    display: inline-block
}

#theater-mode {
    outline: none;
    position: absolute;
    bottom: -1.9px;
    right: 26px;
}

#full-screen {
    color: whitesmoke;
    outline: none;
    bottom: 5px;
    position: absolute;
    right: 0;
}
